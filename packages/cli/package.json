{
  "name": "@lerna-lite/cli",
  "description": "Lerna-Lite CLI for the Version/Publish commands",
  "version": "3.7.1",
  "bin": {
    "lerna": "dist/cli.js"
  },
  "files": [
    "/dist",
    "schemas/lerna-schema.json"
  ],
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "types": "./dist/index.d.ts",
  "exports": {
    "types": "./dist/index.d.ts",
    "default": "./dist/index.js"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc",
    "build:incremental": "tsc --incremental --sourceMap false --excludeDirectories dist",
    "pack-tarball": "npm pack"
  },
  "license": "MIT",
  "author": "Ghislain B.",
  "homepage": "https://github.com/lerna-lite/lerna-lite",
  "repository": {
    "type": "git",
    "url": "https://github.com/lerna-lite/lerna-lite.git",
    "directory": "packages/cli"
  },
  "bugs": {
    "url": "https://github.com/lerna-lite/lerna-lite/issues"
  },
  "engines": {
    "node": "^18.0.0 || >=20.0.0"
  },
  "dependencies": {
    "@lerna-lite/core": "workspace:*",
    "@lerna-lite/init": "workspace:*",
    "@lerna-lite/npmlog": "workspace:*",
    "dedent": "^1.5.3",
    "dotenv": "^16.4.5",
    "import-local": "^3.2.0",
    "load-json-file": "^7.0.1",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "yargs-parser": "^21.1.1"
  },
  "peerDependenciesMeta": {
    "@lerna-lite/exec": {
      "optional": true
    },
    "@lerna-lite/list": {
      "optional": true
    },
    "@lerna-lite/publish": {
      "optional": true
    },
    "@lerna-lite/run": {
      "optional": true
    },
    "@lerna-lite/version": {
      "optional": true
    },
    "@lerna-lite/watch": {
      "optional": true
    }
  }
}
