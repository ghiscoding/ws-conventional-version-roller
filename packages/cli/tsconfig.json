{
  "extends": "../../tsconfig.base.json",
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "typeRoots": ["typings"],
    "types": ["vitest/globals", "node"]
  },
  "exclude": ["dist", "node_modules", "**/*.spec.ts", "**/__mocks__/**/*.*"],
  "filesGlob": ["./src/**/*.ts"],
  "include": ["src/**/*.ts", "typings/**/*.ts", "src/__tests__/lerna-entry.spec.ts"],
  "references": [
    { "path": "../core" },
    { "path": "../init" },
    { "path": "../listable" },
    { "path": "../publish" },
    { "path": "../version" }
  ]
}
