{
  "extends": "../../tsconfig.base.json",
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "typeRoots": ["typings"],
    "types": ["vitest/globals", "node"]
  },
  "exclude": ["dist", "node_modules", "**/*.spec.ts", "**/*.spec.mts", "**/__mocks__/**/*.*"],
  "filesGlob": ["./src/**/*.ts"],
  "include": [
    "src/**/*.ts",
    "typings/**/*.ts",
    "src/conventional-commits/__tests__/__fixtures__/fixed/scripts/legacy-callback-preset.cts"
  ],
  "references": [{ "path": "../core" }]
}
