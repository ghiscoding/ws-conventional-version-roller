{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2018",
    "lib": ["es2020", "dom"],
    "types": ["jest", "jest-extended", "node"],
    "typeRoots": ["node_modules/@types"],
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "noEmitHelpers": false,
    "noEmitOnError": true,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveConstEnums": true,
    "preserveSymlinks": true,
    "pretty": true,
    "rootDir": ".",
    "stripInternal": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "suppressImplicitAnyIndexErrors": true,
    "strict": true
  },
  "paths": {
    "changed": ["changed/src"],
    "cli": ["cli/src"],
    "core": ["core/src"],
    "diff": ["diff/src"],
    "exec": ["exec/src"],
    "filter-packages": ["filter-packages/src"],
    "init": ["init/src"],
    "list": ["list/src"],
    "listable": ["listable/src"],
    "profiler": ["profiler/src"],
    "publish": ["publish/src"],
    "run": ["run/src"],
    "version": ["version/src"],
    "watch": ["watch/src"]
  }
}
