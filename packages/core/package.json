{
  "name": "@lerna-lite/core",
  "description": "Lerna-Lite core implementation module",
  "version": "2.1.0",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "/dist"
  ],
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "default": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./*": "./*",
    "./cli.js": "./dist/cli.js",
    "./dist/cli.js": "./dist/cli.js"
  },
  "typesVersions": {
    "*": {
      "*": [
        "./dist/index.d.ts"
      ]
    }
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc",
    "build:incremental": "tsc --incremental --sourceMap false --excludeDirectories dist",
    "pack-tarball": "npm pack"
  },
  "license": "MIT",
  "author": "Ghislain B.",
  "homepage": "https://github.com/lerna-lite/lerna-lite",
  "repository": {
    "type": "git",
    "url": "https://github.com/lerna-lite/lerna-lite.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/lerna-lite/lerna-lite/issues"
  },
  "engines": {
    "node": ">=16.15.0",
    "npm": ">=8.5.0"
  },
  "dependencies": {
    "@npmcli/run-script": "^6.0.0",
    "chalk": "^5.2.0",
    "clone-deep": "^4.0.1",
    "config-chain": "^1.1.13",
    "cosmiconfig": "^8.1.3",
    "dedent": "^0.7.0",
    "execa": "^7.1.1",
    "fs-extra": "^11.1.1",
    "glob-parent": "^6.0.2",
    "globby": "^13.1.4",
    "inquirer": "^9.1.5",
    "is-ci": "^3.0.1",
    "json5": "^2.2.3",
    "load-json-file": "^7.0.1",
    "minimatch": "^9.0.0",
    "npm-package-arg": "^10.1.0",
    "npmlog": "^7.0.1",
    "p-map": "^6.0.0",
    "p-queue": "^7.3.4",
    "resolve-from": "^5.0.0",
    "semver": "^7.5.0",
    "slash": "^5.0.0",
    "strong-log-transformer": "^2.1.0",
    "write-file-atomic": "^5.0.0",
    "write-json-file": "^5.0.0",
    "write-pkg": "^5.1.0"
  },
  "devDependencies": {
    "@types/clone-deep": "^4.0.1",
    "@types/dedent": "^0.7.0",
    "@types/fs-extra": "^11.0.1",
    "@types/glob-parent": "^5.1.1",
    "@types/inquirer": "^9.0.3",
    "@types/minimatch": "^5.1.2",
    "@types/npm-package-arg": "^6.1.1",
    "@types/semver": "^7.3.13",
    "@types/strong-log-transformer": "^1.0.0",
    "@types/write-file-atomic": "^4.0.0",
    "npm-registry-fetch": "^14.0.4",
    "yargs": "^17.7.1",
    "yargs-parser": "^21.1.1"
  },
  "funding": {
    "type": "ko_fi",
    "url": "https://ko-fi.com/ghiscoding"
  }
