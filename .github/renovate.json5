{
  extends: ['config:base', 'group:allNonMajor'],
  labels: ['dependencies'],
  ignorePaths: ['helpers', '**/__fixtures__/**', '**/__tests__/**'],
  pin: false,
  rangeStrategy: 'bump',
  packageRules: [
    {
      depTypeList: ['peerDependencies'],
      enabled: false,
    },
    {
      // npm security audit seems to prefer 1.2.6 for some reason
      packageNames: ['tacks'],
      allowedVersions: '1.2.6',
    },
    {
      packageNames: ['node'],
      allowedVersions: '18.0.0',
    },
    {
      packageNames: ['nx'],
      allowedVersions: '15.4.8', // newer version seems to cause problems with Vitest
    },

    // Node 18 deps
    {
      packageNames: ['@octokit/rest'],
      allowedVersions: '<20.0.0',
    },
    {
      packageNames: ['globby'],
      allowedVersions: '<14.0.0',
    },
    {
      packageNames: ['multimatch'],
      allowedVersions: '6.0.0',
    },
    {
      packageNames: ['find-up'],
      allowedVersions: '<7.0.0',
    },
  ],
  ignoreDeps: [
    'conventional-changelog-core',
    'conventional-changelog-writer',
    'conventional-changelog-conventionalcommits',
    'conventional-recommended-bump',
  ],
  schedule: ['every 2 weeks on Thursday'],
}
